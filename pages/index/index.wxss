/**index.wxss**/
.pages-login{
  width: 100%;
  height: 100vh;
}
.logo-box{
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto;
  padding-top: 300rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 300rpx;
}
.user-btn{
  width: 515rpx;
	height: 63rpx;
	border-radius: 32rpx;
  border: solid 1rpx #d1d1d1;
  background-color: transparent;
  font-size: 28rpx;
  color: #666666;
  line-height: 63rpx;
  text-align: center;
}
.content-box{
  width: 540rpx;
	height: 270rpx;
	background-color: #ffffff;
	box-shadow: 0rpx 0rpx 24rpx 0rpx 
		rgba(0, 0, 0, 0.8);
  border-radius: 15rpx;
  position: relative;
}
.icon-delete{
  color: #d4d4d4;
  position: absolute;
  top: 0rpx;
  right: 30rpx;
}
.title{
  font-size: 24rpx;
  line-height: 36rpx;
  letter-spacing: 0rpx;
  color: #333333;
  padding-top: 66rpx;
  width: 80%;
  text-align: center;
  margin: 0 auto;
}
.phone-btn{
  width: 219rpx;
  height: 42rpx;
	background-image: linear-gradient(0deg, 
		#e72828 0%, 
		#f99292 100%);
  border-radius: 18rpx;
  margin: 0 auto;
  margin-top: 36rpx;
  font-size: 24rpx;
  color: #ffffff;
  line-height: 42rpx;
  text-align: center;
  border: #e72828;
}
.phone-img{
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
  width: 80rpx;
	height: 92rpx;

}
.van-icon{
  margin-top: -10rpx;
}
