.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
page {
  font-family: -apple-system, BlinkMacSystemFont, Helvetica Neue, Helvetica, Roboto, Arial, PingFang SC,
    Hiragino Sans GB, Microsoft Yahei, SimSun, sans-serif;
    
    background-color: #FCFCFC;
}

/* 一行省略 */
.ellipsis1row {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/* 两行省略 */
.ellipsis2row {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  /*! autoprefixer: off */
  -moz-box-orient: vertical;
  -webkit-box-orient: vertical;
  /*! autoprefixer: on */
}
/* 三行省略 */
.ellipsis3row {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  overflow: hidden;
  /*! autoprefixer: off */
  -moz-box-orient: vertical;
  -webkit-box-orient: vertical;
  /*! autoprefixer: on */
}
.fifiveline {
  display: -webkit-box !important;
  -webkit-line-clamp: 6;
  overflow: hidden;
  text-overflow: ellipsis;
  /*! autoprefixer: off */
  word-break: break-all;
  -webkit-box-orient: vertical;
  /*! autoprefixer: on */
}
