.balloon{
  position: absolute;
  right: -27rpx;
  top: 56rpx;
  width: 280rpx;
	height: 60rpx;
	background-color: #ffffff;
	box-shadow: 0rpx 0rpx 6rpx 0rpx 
		rgba(153, 153, 153, 0.25);
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex:1;
}
.balloon:after, .balloon:before {
	bottom: 100%;
  left: 81%;
	border: solid transparent;
	content: " ";
	height: 0;
	width: 0;
	position: absolute;
	pointer-events: none;
}

.balloon:after {
	border-color: rgba(136, 183, 213, 0);
	border-bottom-color: #fff;
	border-width: 12rpx;
	margin-left: -12rpx;
}
.balloon:before {
	border-color: rgba(194, 225, 245, 0);
	border-bottom-color: #f0f2f5;
	border-width: 16rpx;
  margin-left: -16rpx;
}
