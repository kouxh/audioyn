/* pages-homes/column/index.wxss */
.pages-column-index{
  width: 100%;
  height: 100vh;
}
.header-box {
  width: 750rpx;
  height: 210rpx;
  background-image: url("https://march.yuanian.com/static/assets/img/header.png");
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.input-box {
  padding: 40rpx 52rpx 0rpx 52rpx; 
  position: relative;
}

.search {
  position: absolute;
  left: 60rpx;
  color: #fff;
  top: 38rpx;
  font-size: 45rpx;
}

.input-img {
  height: 50rpx !important;
  border-radius: 30rpx;
  border: solid 2rpx #fff;
  padding-left: 50rpx;
  font-size: 22rpx;
}
.title-box{
  display: flex;
  align-items: center;
  margin-left: 52rpx;
  margin-top: 10rpx;
}
.item-img{
  width: 54rpx;
	height: 54rpx;
}
.title{
  font-size: 34rpx;
  color: #ffffff;
  margin: 0rpx 14rpx;
}
.total{
  min-width: 140rpx;
	height: 30rpx;
	background-color: #F67F7B;
	border-radius: 15rpx;
  font-size: 22rpx;
  color: #ffffff;
  line-height: 30rpx;
  text-align: center;
  margin-top: 12rpx;
  margin-right:70rpx;
}

.van-tabs__scroll {
  background-color: transparent !important;
}
.van-tab--active {
  font-size: 32rpx !important;
}
.van-tabs__line {
  background-color: #fff !important;
  width: 40rpx !important;
  bottom: 6px !important;
  left: 0rpx !important;
}
.van-ellipsis{
  width: 100rpx;
  color: #ffffff !important;
  margin-left: -4rpx;

}
.magazine-box{
  margin: 18rpx 52rpx 0rpx 52rpx;
}
