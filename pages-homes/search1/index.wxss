/* pages-homes/search1/index.wxss */
.pages-search-index{
  width: 100%;
  height: 100%;
  margin: 0rpx;
  padding: 0rpx;
}
.header-box {
  width: 750rpx;
  height: 347rpx;
  background-image: url("https://march.yuanian.com/static/assets/img/search1.png");
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.input-box {
  padding: 40rpx 52rpx 0rpx 52rpx; 
  position: relative;
}

.search {
  position: absolute;
  left: 60rpx;
  color: #fff;
  top: 38rpx;
  font-size: 45rpx;
}
.clear {
  position: absolute;
  right: 76rpx;
    top: 16px;
  font-size: 30rpx;
  z-index: 10;
  color: #ddd;
}

.input-img {
  height: 50rpx !important;
  border-radius: 30rpx;
  border: solid 2rpx #fff;
  padding-left: 50rpx;
  font-size: 22rpx;

}
.search-list{
  margin: -220rpx 52rpx 0rpx 52rpx;
}
.no-search-box{
  margin: -230rpx 52rpx 0rpx 52rpx;
}
.title{
  font-size: 26rpx;
	color: #ffffff;
}
.hotList{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  flex:1;
}
.hotItem{
  padding: 0rpx 15rpx;
	height: 30rpx;
	background-color: #ffffff;
	border-radius: 15rpx;
  border: solid 1rpx #ffffff;
  font-size: 20rpx;
  color: #666666;
  text-align: center;
  line-height: 30rpx;
  margin-top: 10rpx;
  margin-right: 14rpx;
}
.recommend-box{
  margin-top: 30rpx;
}
.recommend-title{
    display: flex;
    align-items: center;
}
.icon-tuijian{
  display: flex;
  color: #F7817B;
  font-size: 34rpx;
}
.text{
  font-size: 32rpx;
  color: #333333;
  margin-left: 10rpx;
}
.magazine-box{
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}
